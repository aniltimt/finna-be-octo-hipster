<%= page_title('Permissions') %>
<table width="100%" border="0" cellpadding="2" cellspacing="1" class="list" id="permissions">
  <tr>
    <td class="label">Name</td>
    <td class="label_actions" width="30">edit</td>
    <td class="label_actions" width="30">delete</td>
  </tr>
  <% unless @permissions.blank? -%>
    <% for permission in @permissions -%>
      <tr class="<%= cycle("row_dark", "row_light") -%>">
        <td><%= permission.name %></td>
        <td><%= link_to_edit(permission) %></td>
        <td><%= link_to_delete(permission) %></td>
      </tr>
    <% end -%>
  <% else -%>
    <tr>
      <td colspan="3" class="note">No permissions</td>
    </tr>
  <% end -%>
</table>
<%= list_footer("permission", @permissions) %>