<%= page_title('Editing category') %>
<% form_tag({:action => 'update', :id => @category}, :multipart => true) do %>
  <%= render :partial => 'form' %>
<% end %>

<%= page_title('Styles') %>

<table width="100%" border="0" cellpadding="2" cellspacing="1" class="list" id="styles_table">
  <tr>
    <td class="label">File name</td>
    <td class="label_actions" style="width:80px">specifications</td>
    <td class="label_actions" style="width:30px">items</td>
    <td class="label_actions" style="width:30px">edit</td>
    <td class="label_actions" style="width:30px">delete</td>
  </tr>
  <tr>
    <td colspan="5" style="border:0px; padding:0px;">
      <div id="styles">
        <%= render :partial => "styles" %>
      </div>
    </td>
  </tr>
</table>

<div id="list_footer">
  <table width="340px" border="0" cellpadding="2" cellspacing="1">
    <tr>
      <td>
        <table border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td>
              <%= link_to(
                image_tag("/images/cms/new.gif", :alt => "new"),
                "javascript:void(0)",
                :onClick => "$('#new_style').show()",
                :class => "button_link",
                :title => "New"
              )%>
            </td>
            <td>
              <%= link_to(
                "New style",
                "javascript:void(0)",
                :onClick => "$('#new_style').show()",
                :class => "button_link",
                :title => "New"
              )%>
            </td>
          </tr>
        </table>
      </td>
    </tr>  
    <tr>
      <td colspan="2">
        <% hidden_div_if(true, {:id => 'new_style'}) do %>
          <%= header_for_hidden_div('New item', 'new_style') %>
          <% @style = Style.new(:category_id => @category.id) -%>
          <% form_tag({:action => 'create_style'}, :multipart => true) do %>
            <%= render :partial => 'style_form' %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </table>
</div>

<br />
<br />
<%= link_to('Back', :action => 'list') %>
